<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:checked="true"
            android:text="设置" />

        <RadioButton
            android:id="@+id/rb_operation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="操作" />
    </RadioGroup>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_setting"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="匹配密码："
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_passwd"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="fellowMe手机号："
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="4dp"
                    android:background="#aaa" />

                <EditText
                    android:id="@+id/et_new_passwd"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="输入新密码"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_change_passwd"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="确认修改" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="4dp"
                    android:background="#aaa" />

                <EditText
                    android:id="@+id/et_new_number"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="输入新手机号"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_change_number"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="确认修改" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_operation"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <Button
                    android:id="@+id/btn_get_location"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="获得FellowMe位置GO~~" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>